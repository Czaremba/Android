<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lc.giftthecode">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".volunteer.VolunteerActivity" />
        <activity android:name=".donors.DonorActivity" />
        <activity android:name=".donors.AddActivity" />
        <activity android:name=".apply.ApplySelection" />
        <activity android:name=".apply.ApplyDonateActivity" />
        <activity android:name=".apply.ApplyVolunteerActivity"></activity>
    </application>

</manifest>